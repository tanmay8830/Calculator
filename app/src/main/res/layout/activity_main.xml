<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ABEF98">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70dp"
        android:gravity="right"
        android:layout_gravity="bottom"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black">

    </TextView>
</LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <Button

            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/buttondivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <Button

            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="×"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2">

        </Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <Button

            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/buttonsubsract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2">
        </Button>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttonbackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#84C57D"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>
        <Button
            android:id="@+id/buttondot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/buttonplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="#FCE2E2">
        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttonmodulus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/buttoncancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>


        <Button
            android:id="@+id/buttonBraces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="#FCE2E2"
            android:layout_marginRight="10dp">
        </Button>

        <Button
            android:id="@+id/buttonequlas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="#84C57D">
        </Button>
    </LinearLayout>


</LinearLayout>